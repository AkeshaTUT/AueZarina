# ZarinAI Configuration для Google Cloud VM
# Скопируйте этот файл в .env и заполните своими значениями

# Telegram Bot Token (обязательно)
BOT_TOKEN=your_telegram_bot_token_here

# OpenRouter API Key для AI рекомендаций (опционально)
OPENROUTER_API_KEY=sk-or-v1-your_openrouter_key_here

# Среда выполнения (production для сервера, development для локальной разработки)
ENVIRONMENT=production

# Настройки логирования (опционально)
LOG_LEVEL=INFO

# Настройки базы данных (опционально, по умолчанию SQLite)
DATABASE_URL=sqlite:///steam_bot.db

# Настройки веб-сервера keep-alive (опционально)
WEB_SERVER_PORT=8080
WEB_SERVER_HOST=0.0.0.0

# Настройки мониторинга (опционально)
MONITORING_ENABLED=true
